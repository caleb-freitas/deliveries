{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "rootDir": "./",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}